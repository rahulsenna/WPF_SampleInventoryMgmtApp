	<ControlTemplate x:Key="errorTemplate">
		<DockPanel>
			<AdornedElementPlaceholder x:Name="control" DockPanel.Dock="Top"/>
			<Border DockPanel.Dock="Top" Height="2" Background="Red" Margin="0,0,0,1"/>
			<TextBlock Foreground="Red" FontSize="12" FontWeight="Bold"
               Text="{Binding [0].ErrorContent}" 
               HorizontalAlignment="Center" Margin="0,2,0,0"
               IsHitTestVisible="False"/>
		</DockPanel>
	</ControlTemplate>

