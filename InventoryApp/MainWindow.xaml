<Window x:Class="InventoryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid ColumnDefinitions="3*, 7*">
		<Rectangle Grid.Column="0" Fill="Red" />
		<Grid Grid.Column="1" RowDefinitions="1*,9*">
			<StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
				<Button Margin="5,0,5,0" Padding="5,0,5,0" Content="Add Product" />
				<Button Margin="5,0,5,0" Padding="5,0,5,0" Content="Edit Selected" />
				<Button Margin="5,0,5,0" Padding="5,0,5,0" Content="Delete Selected" />
				<Button Margin="5,0,5,0" Padding="5,0,5,0"  Content="Refresh" />
			</StackPanel>
			<DataGrid Grid.Row="1">
			</DataGrid>
		</Grid>
	</Grid>
</Window>